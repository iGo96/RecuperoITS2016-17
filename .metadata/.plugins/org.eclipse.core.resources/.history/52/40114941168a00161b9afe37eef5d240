package com.its.es2;

import com.its.exceptions.NodeAlreadyExistsException;

public class Main {

	public static void main(String[] args) throws Exception {		
		BT t = new BT(2); // condizione di esistenza dell'albero è l'esistenza della root 
		Node root = t.getRoot();
		try{
			t.insertLeft(root, 3);
		} catch(NodeAlreadyExistsException e){
			System.out.println(e.getMessage());
//			e.getNode(); // Si prende il nodo che è esiste già
		}
		
		Node nx = new Node(5, t.getNode());
		try{
			nx = t.insertRight(root, 3);
		} catch(NodeAlreadyExistsException e){
			System.out.println(e.getMessage());
		}
		
		try{
			t.insertLeft(nx, 5);
		} catch(NodeAlreadyExistsException e){
			System.out.println(e.getMessage());
		}
		
		Node n5 = t.searchFirst(5);
		t.deleteNode(n5);
		
		t.updateNode(nx, 10);
		Node n3  = t.searchFirst(3);
		System.out.println("n3 != nx" + (n3 != nx));
	}
}
